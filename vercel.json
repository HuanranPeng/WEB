{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "headers": [
    {
      "source": "/2026/sitemap-trice-2025.xml",
      "headers": [
        {
          "key": "Content-Type", 
          "value": "application/xml; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/2026/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain; charset=utf-8"
        }
      ]
    }
  ],
  "routes": [
    { "handle": "filesystem" },

    { "src": "/2026/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/2026/images/(.*)", "dest": "/images/$1" },
    { "src": "/2026/meta/(.*)", "dest": "/meta/$1" },
    { "src": "/2026/favicon/(.*)", "dest": "/favicon/$1" },
    { "src": "/2026/favicon.svg", "dest": "/favicon.svg" },

    { "src": "/2026(?:/.*)?", "dest": "/index.html" },

    { "src": "/(?!2026(?:/|$)).*", "status": 404, "dest": "/404.html" }
  ]
} 