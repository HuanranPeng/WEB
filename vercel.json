{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "headers": [
    {
      "source": "/2026/sitemap-trice-2025.xml",
      "headers": [
        {
          "key": "Content-Type", 
          "value": "application/xml; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/2026/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain; charset=utf-8"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/2026",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/2026/assets/(.*)",
      "destination": "/assets/$1"
    },
    {
      "source": "/2026/images/(.*)",
      "destination": "/images/$1"
    },
    {
      "source": "/2026/meta/(.*)",
      "destination": "/meta/$1"
    },
    {
      "source": "/2026/favicon/(.*)",
      "destination": "/favicon/$1"
    },
    {
      "source": "/2026/favicon.svg",
      "destination": "/favicon.svg"
    },
    {
      "source": "/2026/((?!api/|assets/|images/|favicon|robots|sitemap).*)",
      "destination": "/index.html"
    },
    {
      "source": "/2026",
      "destination": "/index.html"
    }
  ]
} 